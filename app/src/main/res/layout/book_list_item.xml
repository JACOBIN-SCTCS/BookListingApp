<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="73dp"
        android:contentDescription="@string/description_image_view"
        android:layout_height="107dp"
        app:srcCompat="@drawable/sample"
        android:id="@+id/book_image"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        tools:text="The Lord Of the Rings"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_title"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/book_image"
        app:layout_constraintTop_toTopOf="@+id/book_image"
        app:layout_constraintBottom_toBottomOf="@+id/book_image"
        app:layout_constraintVertical_bias="0.19"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="Author Name"
        tools:text="Michael A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book_author"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/book_image"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/book_title" />

    <ImageView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/divider"
        android:id="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/description_divider"
        app:layout_constraintTop_toBottomOf="@+id/book_image" />

</android.support.constraint.ConstraintLayout>